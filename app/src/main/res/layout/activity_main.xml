<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:text="Joao Souza"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="158dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/banco_inter_logo_39a6e70400_seeklogo_com"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="104dp" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:alpha="0.6"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#E0EAF4"

        android:ems="10"
        android:inputType="number"
        android:paddingLeft="15sp"
        android:paddingTop="15sp"
        android:paddingRight="15sp"
        android:paddingBottom="15sp"
        android:radius="40dp"
        android:text="Digite sua senha"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="437dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:text="Senha"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="409dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:text="Entrar"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="514dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="44dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/perfil"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="343dp" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="***1111-1"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="364dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:text="Trocar"
        android:textColor="#FE8600"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="343dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iSafe"
        android:background="@android:color/transparent"
        android:textColor="#FE8600"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="738dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trocar ou abrir conta"
        android:background="@android:color/transparent"
        android:textColor="#FE8600"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="738dp" />

</androidx.constraintlayout.widget.ConstraintLayout>